{
    "compilerOptions": {
        "lib": [
            "ES5"
        ],
        "module": "commonjs",
        "target": "ES5",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "outDir": "./build/",
        "allowJs": false,
        "baseUrl": "src",
    },
    "exclude": [
        "node_modules",
        "build"
    ]
}